-# ----------------------------
-# header
-# ----------------------------
= render 'layouts/header'

.slide-show
  %div
    %img.ecosearch-img{ :src => "assets/ecosearch.jpg" }
  %div
    %img.ecosearch-img{ :src => "assets/city.jpg" }
  %div
    %img.ecosearch-img{ :src => "assets/building.jpg" }

.container
  .row
    .wrapper.col-12
      .look_at_syllabus.col-12   
        -# 検索フォームを作成する。
        %div.search
          = form_tag schools_path, :method => 'get' do
            = text_field_tag :search, params[:search]
            = submit_tag 'search', :name => nil

        .col-12.btn.syllabus-area
          - if @school.present?
            = form_with model: @school, url: schools_path, local: true do |f|
              - @school.each do |s|
                %div.syllabus.col-5
                  .form-group
                    %i.fa.fa-home.menu-school
                    = f.label :school_class, '授業名', class: 'title'
                    %p= s.school_class
                  .form-group
                    %i.fa.fa-chalkboard-teacher
                    = f.label :name, '先生', class: 'title'
                    %p= s.name
                  .form-group
                    %i.fa.fa-heart{ style: 'color: rgb(255, 0, 0);' }
                    = f.label :evaluation, '授業に対する評価', class: 'title'
                    %p{style: 'color: rgb(255, 255, 0);'}= s.evaluation
                  .form-group
                    %i.fa.fa-file-alt
                    = f.label :test, 'テスト形式', class: 'title'
                    %p= s.test
                  %p= link_to 'Read more...', s, id: 'detail-' + s.id.to_s , class: 'link-style'
          - else

-# ----------------------------
-# footer
-# ----------------------------
= render 'layouts/footer'

:javascript
  $(function() {
    $('.slide-show').slick({
      dots: true,
      autoplay: true,
      autoplaySpeed: 4000,
      speed: 800
    });
  });