= render 'layouts/header'

.login
  = form_with scope: @user, url: users_path, local: true do |f|
    %div
      .form-group
        = f.label :name, 'User Name'
        = f.text_field :name, class: 'form-control', placeholder: 'ex) Hikaru Kobayashi'
      .form-group
        = f.label :email, 'E-mail'
        = f.text_field :email, class: 'form-control', placeholder: 'ex)sample@example.com'
      .form-group
        = f.label :password, 'Password'
        %br
        %td= f.password_field  :password, id: :user_password, class: 'form_txt', placeholder: 'Password'
        %td= f.password_field :password_confirmation, id: :user_password_confirmation, class: 'form_txt', placeholder: 'Password（Confirm）'
      .lock-area
        = f.submit 'Sign up', class: 'btn btn-primary'
        %button.btn.btn-danger
          = link_to 'Cancel', login_path, class: 'link-style'