= render 'layouts/header'

.container
  .row
    .login
      = form_with scope: :session, url: login_path, local: true do |f|
        .form-group
          = f.label :email, 'E-mail', class: 'login-label'
          = f.text_field :email, class: 'form-control'
        .form-group
          = f.label :password, 'Password', class: 'login-label'
          %br
          = f.password_field :password, class: 'font-control'
        .form-group
          =f.submit 'Log in', class: 'btn btn-warning link-style'
          %button.btn.btn-primary
            = link_to 'Sign up', users_path, class: 'link-style'